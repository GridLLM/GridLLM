# Environment Configuration
NODE_ENV=development
PORT=3000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=llmama:

# Ollama Configuration
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_PROTOCOL=http
OLLAMA_TIMEOUT=300000
OLLAMA_MAX_RETRIES=3

# Broker Configuration
BROKER_HOST=localhost
BROKER_PORT=6379
BROKER_AUTH_TOKEN=your-secure-token-here
BROKER_HEARTBEAT_INTERVAL=30000
BROKER_RECONNECT_DELAY=5000
BROKER_MAX_RECONNECT_ATTEMPTS=10

# Worker Configuration
WORKER_ID=worker-001
WORKER_CONCURRENCY=2
WORKER_MAX_CONCURRENT_JOBS=5
WORKER_POLL_INTERVAL=1000
WORKER_RESOURCE_CHECK_INTERVAL=10000

# Performance Thresholds
MAX_CPU_USAGE=80
MAX_MEMORY_USAGE=85
MAX_GPU_MEMORY_USAGE=90
MIN_AVAILABLE_MEMORY_MB=1024

# Security
JWT_SECRET=your-jwt-secret-key-here
API_KEY=your-api-key-here
ENCRYPT_SENSITIVE_DATA=true

# Monitoring & Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/llmama-client.log
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=60000

# Task Configuration
TASK_TIMEOUT=600000
TASK_RETRY_ATTEMPTS=3
TASK_RETRY_DELAY=5000
TASK_PRIORITY_WEIGHTS=high:3,medium:2,low:1

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
