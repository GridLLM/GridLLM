# Environment
NODE_ENV=development

# Server Configuration
PORT=4000
SERVER_ID=GridLLM-server-001

# Redis Configuration (Central message bus)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=GridLLM:

# Worker Management
WORKER_TIMEOUT=300000
WORKER_HEARTBEAT_TIMEOUT=60000
WORKER_CLEANUP_INTERVAL=30000

# Job Configuration
JOB_TIMEOUT=600000
JOB_RETRY_ATTEMPTS=3
JOB_RETRY_DELAY=5000
MAX_CONCURRENT_JOBS_PER_WORKER=1

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/GridLLM-server.log
HEALTH_CHECK_INTERVAL=60000

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGIN=*
